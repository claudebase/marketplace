{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/runner.js\" \"${CLAUDE_PLUGIN_ROOT}/hooks/skill_eval_hook.py\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/runner.js\" \"${CLAUDE_PLUGIN_ROOT}/hooks/format_file_hook.py\"",
            "timeout": 15
          },
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/runner.js\" \"${CLAUDE_PLUGIN_ROOT}/hooks/security_reminder_hook.py\""
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/runner.js\" \"${CLAUDE_PLUGIN_ROOT}/hooks/validate_bash_command.py\"",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "startup|resume",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/runner.js\" \"${CLAUDE_PLUGIN_ROOT}/hooks/platform_instructions_hook.py\"",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/runner.js\" \"${CLAUDE_PLUGIN_ROOT}/hooks/validate_env_vars.py\"",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/runner.js\" \"${CLAUDE_PLUGIN_ROOT}/hooks/restore_session_context.py\"",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/runner.js\" \"${CLAUDE_PLUGIN_ROOT}/hooks/save_session_state.py\"",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
